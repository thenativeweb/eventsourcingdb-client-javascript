{
  "name": "@thenativeweb/eventsourcingdb",
  "version": "0.7.0",
  "description": "eventsourcingdb is the JavaScript client for EventSourcingDB.",
  "contributors": [
    {
      "name": "Golo Roden",
      "email": "golo.roden@thenativeweb.io"
    },
    {
      "name": "Noah Hummel",
      "email": "noah.hummel@thenativeweb.io"
    },
    {
      "name": "Alexander Kampf",
      "email": "alexander.kampf@thenativeweb.io"
    }
  ],
  "exports": {
    ".": {
      "import": "./build/index.mjs",
      "require": "./build/index.js"
    }
  },
  "types": "build/index.d.ts",
  "dependencies": {
    "@opentelemetry/api": "1.4.1",
    "axios": "1.4.0",
    "http-status-codes": "2.2.0",
    "stream-to-async-iterator": "1.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/mocha": "10.0.1",
    "@types/shelljs": "0.8.12",
    "assertthat": "6.5.2",
    "express": "4.18.2",
    "mocha": "10.2.0",
    "rome": "12.1.3",
    "shelljs": "0.8.5",
    "ts-node": "10.9.1",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  },
  "scripts": {
    "analyze": "npx rome ci ./**/*",
    "build": "npx tsc --noEmit && npx tsup --clean --dts --format cjs,esm --minify --out-dir=./build/ lib/index.ts",
    "format": "npx rome format --write ./**/*",
    "qa": "npm run analyze && npm run test",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npx mocha --bail --require ts-node/register --recursive --ui tdd './test/unit/**/*.ts'",
    "test:integration": "npx mocha --bail --require ts-node/register --recursive --ui tdd './test/integration/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thenativeweb/eventsourcingdb-client-javascript.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/thenativeweb"
  }
}
