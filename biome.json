{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["build", "node_modules", "*.txt", "*.md"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"useImportRestrictions": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"globals": ["setup", "suite", "suiteSetup", "teardown", "test"],
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "all"
		}
	}
}
